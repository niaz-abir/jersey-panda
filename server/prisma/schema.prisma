generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jersey {
  id            String         @id @default(uuid())
  picture       String
  title         String
  category      JerseyCategory
  size          Json
  color         String
  orginalPrice  Int
  discountPrice Int
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  deletedAt     DateTime?
}

model CustomJersey {
  id        String    @id @default(uuid())
  picture   String
  title     String
  color     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model ReviewGallery {
  id          String    @id @default(uuid())
  firstImage  String
  secondImage String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
}

enum JerseyCategory {
  CLUB
  NATIONAL
}
