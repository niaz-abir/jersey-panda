generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jersey {
  id            String    @id @default(uuid())
  picture       String
  title         String
  size          Json
  color         String
  orginalPrice  Int
  discountPrice Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?
}

model CustomJersey {
  id        String    @id @default(uuid())
  picture   String
  title     String
  color     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
